{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "LaserMetrics",
  "version": "0.1.0",
  "identifier": "com.alexandrespindola.lasermetrics",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun dev",
    "beforeBuildCommand": "bun generate"
  },
  "app": {
    "windows": [
      {
        "title": "LaserMetrics - Sensor Monitoring",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}